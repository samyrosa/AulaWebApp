@model AulaWebApp.Models.ClienteViewModel

<div class="row gx-1">
    <div class="col-4">
    </div>
    <div class="col-4">

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Erro"]
            </div>
        }

        <div class="card text-bg-dark">
            <div class="card-header">
                <h2>Cadastro de Clientes</h2>
            </div>
            <div class="card-body">
                <form action="/Clientes/SalvarDados" method="post">
                    <label>Código</label>
                    <input type="number" name="Id" class="form-control form-control-sm" value="@Model.Id" readonly />
                    <br />
                    <label>Nome</label>
                    <input type="text" name="Nome" class="form-control form-control-sm" value="@Model.Nome" />
                    <br />
                    <label>Telefone</label>
                    <input type="text" name="Telefone" class="form-control form-control-sm" value="@Model.Telefone" />
                    <br />
                    <button type="submit" class="btn btn-success">
                        Salvar Cliente
                    </button>

                </form>
            </div>
        </div>

    </div>
    <div class="col-4">
    </div>
</div>