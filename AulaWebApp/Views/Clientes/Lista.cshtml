@model List<AulaWebApp.Models.ClienteViewModel>

<div class="card text-bg-dark">
    <div class="card-header">
        <h2>Lista de Clientes</h2>
    </div>
    <div class="card-body">
        <div class="row gx-1">
            <div class="col">
                <a href="/Clientes/Cadastro" class="btn btn-success btn-sm">Cadastro de Cliente</a>
            </div>
            <div class="col-3">
                <select name="TipoBusca" class="form-select form-select-sm">
                    <option value="0">Todoas os campos</option>
                    <option value="id">Buscar por Id</option>
                    <option value="nome">Buscar por Nome</option>
                    <option value="telefone">Buscar por Telefone</option>
                </select>
            </div>
            <div class="col-3">
                <input name="Pesquisa" type="text" class="form-control form-control-sm" />
            </div>
            <div class="col-1">
                <a href="/Clientes/Cadastro" class="btn btn-info btn-sm w-100">Pesquisar</a>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nome</td>
                        <td>@item.Telefone</td>
                        <td class="text-end">
                            <a href="/Clientes/Editar/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/Clientes/Excluir/@item.Id" class="btn btn-danger btn-sm">Excluir</a>
                            <a href="/Clientes/Compras/@item.Id" class="btn btn-primary btn-sm">Lista de Compra</a>
                        </td>
                    </tr>
                                    
                }
                
            </tbody>
        </table>
    </div>
</div>