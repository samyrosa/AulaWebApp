@model AulaWebApp.Entidades.Categorias

<div class="row gx-1">
    <div class="col-4">
    </div>
    <div class="col-4">


        <div class="card text-bg-dark">
            <div class="card-header">
                <h2>Cadastro de Categorias</h2>
            </div>
            <div class="card-body">
                <form action="/Categorias/SalvarDados" method="post">
                    <label>Código</label>
                    <input type="number" name="Id" class="form-control form-control-sm" readonly />
                    <br />
                    <label>Nome</label>
                    <input type="text" name="Nome" class="form-control form-control-sm" />
                    <br />
                    <br />
                    <input type="checkbox" class="form-check-input" name="Ativo" checked>
                    <label class="form-check-label" for="Ativo">Ativos</label>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-success">
                        Salvar Cliente
                    </button>

                </form>
            </div>
        </div>

    </div>
    <div class="col-4">
    </div>
</div>
